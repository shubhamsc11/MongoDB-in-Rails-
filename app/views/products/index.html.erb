<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>

    <hr>
  <% end %>
</div>

<button><%= link_to "New product", new_product_path %></button>
